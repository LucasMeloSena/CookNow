generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model receita {
  id             Int                   @id @default(autoincrement())
  nome           String
  url_image      String
  tempo_medio    Int
  custo          Int
  dificuldade    Int
  localizacao    String
  avaliacao      Float
  dt_cadastro    DateTime
  dt_atualizacao DateTime
  categoria      categoria?
  modo_preparo   modo_preparo[]
  ingredientes   receita_ingrediente[]
}

model modo_preparo {
  id        Int     @id @default(autoincrement())
  nome      String
  receitaId Int
  receita   receita @relation(fields: [receitaId], references: [id])
}

model categoria {
  id        Int     @id @default(autoincrement())
  nome      String
  receitaId Int     @unique
  receita   receita @relation(fields: [receitaId], references: [id])
}

model receita_ingrediente {
  receitaId     Int
  ingredienteId Int
  receita       receita @relation(fields: [receitaId], references: [id])
  ingrediente ingrediente @relation(fields: [ingredienteId], references: [id])

  @@id([receitaId, ingredienteId])
}

model ingrediente {
  id   Int    @id @default(autoincrement())
  nome String
  ingredientes receita_ingrediente[]
}
