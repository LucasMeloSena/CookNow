{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "prisma generate && tsx watch ./src/server.ts",
    "dev": "npm run services:up && npm run wait:postgres && npm run migrations:up && tsx watch ./src/server.ts",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "test": "npm run services:up && npm run wait:postgres && npm run migrations:create && npm run migrations:populate && concurrently -n server,jest --hide server -k -s command-jest \"npm run dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "services:up": "docker compose -f src/infra/docker/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/docker/compose.yaml stop",
    "services:down": "docker compose -f src/infra/docker/compose.yaml down",
    "wait:postgres": "tsx ./src/infra/database/wait-for-postgres.ts",
    "migrations:up": "npx prisma migrate deploy",
    "migrations:create": "npx prisma migrate dev",
    "migrations:populate": "tsx ./prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/async-retry": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.9.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.16.0"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "async-retry": "^1.3.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "prisma": "^5.13.0",
    "swagger-ui-express": "4.3.0",
    "zod": "^3.23.6"
  }
}
